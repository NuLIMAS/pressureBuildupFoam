FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default 	    Euler;
}

gradSchemes
{
    default         leastSquares;
    grad(D)         leastSquares;
    grad(p)         leastSquares;
}

divSchemes
{
    default         none;
    div(sigmaD)     Gauss linear;
    div(ddt(Dp2,D)) Gauss linear corrected;
    div(ddt(Dp3,D)) Gauss linear corrected;
    div(d2dt2(D))   Gauss linear corrected;
}

laplacianSchemes
{
    default         none;
    laplacian(DD,D) Gauss linear corrected;
    laplacian(Dp2,p) Gauss linear corrected;
    laplacian(Dp3,p) Gauss linear corrected;
    laplacian(cv,pE) Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         none;
}

fluxRequired
{
    default         no;
    D               yes;
    p               no;
}


